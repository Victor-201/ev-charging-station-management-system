# Environment Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
DB_HOST=postgres-user
DB_PORT=5432
DB_NAME=ev_user_db
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration (for verifying auth tokens)
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=1h

# Auth Service URL (for internal API calls)
AUTH_SERVICE_URL=http://auth-service:3001

# Payment Service URL (for wallet operations)
PAYMENT_SERVICE_URL=http://payment-service:3003

# Notification Service URL
NOTIFICATION_SERVICE_URL=http://notification-gateway:3006

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Export Configuration
EXPORT_DIR=./exports
EXPORT_URL_BASE=http://localhost:3002/exports

# Webhook Secrets (for validating webhook requests)
BOOKING_SERVICE_WEBHOOK_SECRET=your-booking-webhook-secret
PAYMENT_SERVICE_WEBHOOK_SECRET=your-payment-webhook-secret

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# Firebase Cloud Messaging Configuration
# Option 1: Using service account file (RECOMMENDED)
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Option 2: Using environment variables (for cloud deployment)
# FIREBASE_PROJECT_ID=ev-charging-station-ad2b7
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@ev-charging-station-ad2b7.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
